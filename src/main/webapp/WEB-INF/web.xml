<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Barrels</servlet-name>
		<servlet-class>br.ufrn.imd.winecloud.presentation.Barrels</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Barrels</servlet-name>
		<url-pattern>/barrels</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegisterSensor</servlet-name>
		<servlet-class>br.ufrn.imd.winecloud.presentation.RegisterSensor</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterSensor</servlet-name>
		<url-pattern>/registerSensor</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RegisterBarrel</servlet-name>
		<servlet-class>br.ufrn.imd.winecloud.presentation.RegisterBarrel</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterBarrel</servlet-name>
		<url-pattern>/RegisterBarrel</url-pattern>
	</servlet-mapping>
</web-app>